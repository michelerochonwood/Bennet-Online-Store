    <title>Product List</title>
    <link rel="stylesheet" href="/css/styles.css">

<body>

    <!-- User Authentication Section -->
    <section class="user-auth-section">
        {{#if user}}
            <p>Welcome, {{user.username}}!</p>
            <a href="/auth/logout">Logout</a>
        {{else}}
            <a href="/login">Login</a> | <a href="/register">Register</a>
        {{/if}}
    </section>

    <h1 class="center-page-title">Product List</h1>

    <!-- Add Product Form -->
    {{#if user}}
        <section class="add-product-section">
            <h2>Add New Product</h2>
            <form action="/products/add" method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" placeholder="Enter a product title such as Manitoba Honey, Small Jar" required>

                <label for="subtitle">Subtitle:</label>
                <input type="text" id="subtitle" name="subtitle" placeholder="Enter a subtitle, i.e. size of container or further description of the product." required>

                <label for="image">Image URL:</label>
                <input type="text" id="image" name="image" placeholder="Images must be uploaded to the site, then write link here" required>

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" placeholder="Enter a more detailed description of the product to make it appealing" required>

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" step="0.01" placeholder="Enter this as a number with no other symbols or letters" required>

                <button type="submit">Add Product</button>
            </form>
        </section>
    {{/if}}

    <!-- Product List -->
    <section class="product-list-container">
        <div class="product-section">
            {{#each products}}
                <div class="product-item">
                    <img class="product-image" src="{{this.image}}" alt="{{this.title}}">
                    <div class="product-info">
                        <h2 class="producttitle">{{this.title}}</h2>
                        <p class="productsub">{{this.subtitle}}</p>
                        <p class="producttext">{{this.description}}</p>
                        <p class="price">${{this.price}}</p>
                        {{#if user.isAdmin}} <!-- Show admin controls only if user is an admin -->
                            <div class="admin-controls">
                                <a href="/products/edit/{{this._id}}" class="edit-btn">Edit</a>
                                <a href="/products/delete/{{this._id}}" class="delete-btn">Delete</a>
                            </div>
                        {{/if}}
                    </div>
                </div>
            {{else}}
                <p>No products found.</p>
            {{/each}}
        </div>
    </section>

</body>
</html>





